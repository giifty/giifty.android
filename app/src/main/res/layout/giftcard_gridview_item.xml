<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_margin="2dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="dimen/cardview_default_radius">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/company_image_id"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:padding="2dp"
            android:transitionName="@string/hero_transition_giftcard"
            android:src="@drawable/ic_no_picture"
            />

        <TextView
            android:id="@+id/discount_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="113dp"
            android:background="@drawable/discount_circle_background"
            android:gravity="center"
            android:text="35%"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/company_image_id"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matas"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/title_id"
                android:layout_toEndOf="@+id/title_id"
                android:text=" gavekort"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/title_id"
                android:text="Se alle 32 matas gavekort"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="13sp" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>