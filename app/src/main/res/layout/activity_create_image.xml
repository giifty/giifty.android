<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="canGoToNext"
            type="android.databinding.ObservableBoolean" />

        <variable
            name="pageNumber"
            type="java.lang.String" />

        <variable
            name="nextPageText"
            type="java.lang.String" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="dk.android.giifty.CreateImageActivity">

        <ImageView
            android:id="@+id/image_container_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/framelayout_container_id"
            android:layout_marginBottom="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_no_picture" />

        <TextView
            android:id="@+id/number_out_of_id"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="35dp"
            android:gravity="center_horizontal"
            android:text="@{pageNumber}"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp"
            android:layout_alignBottom="@+id/image_container_id"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/framelayout_container_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin">

            <include
                android:id="@+id/next_id"
                layout="@layout/next_step_layout"
                bind:canGoToNext="@{canGoToNext}"
                bind:nextPageText="@{nextPageText}" />
        </RelativeLayout>
    </RelativeLayout>
</layout>
